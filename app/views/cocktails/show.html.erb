<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> <%= dose.ingredient.name %> <%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
 <%= f.submit "Submit", class: "btn btn-outline-primary" %>
<% end %>

<%= link_to "Back", cocktails_path %>